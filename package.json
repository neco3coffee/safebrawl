{
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "npm --prefix apps/web run lint && npm --prefix apps/api run lint && npm --prefix apps/app run lint && npm --prefix packages run lint",
