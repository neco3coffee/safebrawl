{
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "lint-staged"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
